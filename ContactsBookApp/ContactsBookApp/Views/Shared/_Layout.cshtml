<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>@ViewBag.Title - Contacts Book</title>    
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">My Contacts Book</a>
    </div>
    <div classs="row panel">
        <div id="navbar-default sidebar" role="navigation" class="col-xs-3">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li><h3>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: null)</h3></li>
                    <li><h3>@Html.ActionLink("Contact", "Index", "Contact", routeValues: null, htmlAttributes: null)</h3></li>
                </ul>
            </div>
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>